    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File stand_allone",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Python: Current File with wrapper",
            "type": "python",
            "request": "launch",
            "program": "myWrapper.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "${file}"
            ],
            "env": {
                "PYTHONPATH": ".:./test_vininfo"
            }
        },
        {
            "name": "Python: Vin Task",
            "type": "python",
            "request": "launch",
            "program": "myWrapper.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "./test_vininfo/run_tests.py"
            ],
            "env": {
                "PYTHONPATH": ".:./test_vininfo"
            }
        },
    ]
}